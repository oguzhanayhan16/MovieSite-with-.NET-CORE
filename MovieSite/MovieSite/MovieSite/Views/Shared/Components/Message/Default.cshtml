@model MovieSite.Areas.Admin.Models.AdminMovieViewModel


<li class="dropdown">
    <a class="dropdown-toggle count-info" data-toggle="dropdown" href="#">
        <i class="fa fa-envelope"></i>  <span class="label label-warning">3</span>
    </a>
    <ul class="dropdown-menu dropdown-messages">
        @foreach (var item in Model.HelpMessages)
        {
            @foreach (var user in Model.User)
            {
                if (user.UserID == item.UserID)
                {

                    <li>
                        <div class="dropdown-messages-box">
                            <a class="dropdown-item float-left" href="profile.html">
                                <img alt="image" class="rounded-circle" src="@user.Avatar">
                            </a>
                            <a href="@Url.Action("MailBox", "AdminMessage", new { messageID = @item.MessageID, userID = @user.UserID })" class="media-body" style="color:black">
                                <small class="float-right">@DateTime.Now-@item.MessageDate</small>
                                <strong>@user.Username @user.LastName</strong> <br>
                                <small class="text-muted">@item.MessageDate</small>
                            </a>
                        </div>
                    </li>
                    <li class="dropdown-divider"></li>
                }

            }

        }

        <li>
            <div class="text-center link-block">
                <a href="@Url.Action("MailBox", "AdminMessage") class="dropdown-item">
                    <i class="fa fa-envelope"></i> <strong>Tüm Mesajları Oku</strong>
                </a>
            </div>
        </li>
    </ul>
</li>
