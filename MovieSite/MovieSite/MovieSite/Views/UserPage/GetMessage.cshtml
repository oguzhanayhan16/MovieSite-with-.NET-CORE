@model MovieListModel
@{
    ViewData["Title"] = "GetMessage";
    Layout = "~/Views/Shared/LogPage.cshtml";
}
<div class="row">
    <div class="col-lg-12 animated fadeInRight">
        <div class="mail-box-header">

          
            <div class="mail-tools tooltip-demo m-t-md" >
                <div class="btn-group float-right">
                    <button class="btn btn-white btn-sm"><i class="fa fa-arrow-left"></i></button>
                    <button class="btn btn-white btn-sm"><i class="fa fa-arrow-right"></i></button>
                </div>
                <button class="btn btn-white btn-sm" data-toggle="tooltip" data-placement="left" title="Refresh inbox" style="color:white"><i class="fa fa-refresh"></i> Refresh</button>
                <button class="btn btn-white btn-sm" data-toggle="tooltip" data-placement="top" title="Mark as read" style="color:white;"><i class="fa fa-eye"></i> </button>
                <button class="btn btn-white btn-sm" data-toggle="tooltip" data-placement="top" title="Mark as important" style="color:white;"><i class="fa fa-exclamation"></i> </button>
                <button class="btn btn-white btn-sm" data-toggle="tooltip" data-placement="top" title="Move to trash" style="color:white;"><i class="fa fa-trash-o"></i> </button>

            </div>
        </div>
        <div class="mail-box">
            <input type="hidden" name="userID" value="@Model.UserID" />
            <table class="table table-hover table-mail">
                <tbody>
                     @foreach (var item in Model.messages)
                    {


                        <tr class="unread" style="color:white;text-decoration:none">
                                    <td class="check-mail">
                                        <input type="checkbox" class="i-checks">
                                    </td>
                                    <td class="mail-contact">
                                <a style="color:white;text-decoration:none" href="@Url.Action("ViewMessage", "UserPage", new { messageID = @item.MessageID, userID =@Model.userID})">
                                            Admin
                                        </a>
                                    </td>
                            <td class="mail-subject"><a style="color:white;text-decoration:none" href="@Url.Action("ViewMessage", "UserPage", new { messageID = @item.MessageID, userID =@Model.userID})">@item.MessageTittle</a></td>
                                    <td class=""><i class="fa fa-paperclip"></i></td>
                                    <td class="text-right mail-date">@item.MessageDate.ToString("dd.MM.yyyy")</td>

                                </tr>
                        
                    }
 
                </tbody>
            </table>


        </div>
    </div>
</div>



