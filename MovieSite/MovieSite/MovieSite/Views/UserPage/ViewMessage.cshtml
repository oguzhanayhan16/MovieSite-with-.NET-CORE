@model MovieListModel
@{
    ViewData["Title"] = "ViewMessage";
    Layout = "~/Views/Shared/LogPage.cshtml";
}



<div style=" color: white;padding: 100px 150px;">
    <div class="mail-box-header">
        <div class="mail-tools tooltip-demo m-t-md">
            <h3>
                <span class="font-normal">Konu: </span>@Model.help.MessageTittle
            </h3>
            <h5>
                <span class="float-left font-normal">Gönderen Kişi:Admin </span>
                <span class="float-right font-normal">@Model.help.MessageDate.ToString("dd.MM.yyyy")</span>
            </h5>
        </div>
    </div>
    <input type="hidden" name="userID" value="@Model.userID" />
    <div class="mail-box">
        <div class="mail-body" style="margin-top:20px">
            <p>
                @Model.help.MessageContent
            </p>
        </div>

        <div class="mail-body text-right tooltip-demo">
         
            @using (Html.BeginForm("MailDelete", "UserPage", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.Hidden("messageID", Model.help.MessageID)
                <button title="Trash" data-placement="top" data-toggle="tooltip" data-original-title="Trash" class="btn btn-sm btn-white" style="color: white; background-color: #dc3545;">
                    <i class="fa fa-trash-o"></i> Mesajı Sil
                </button>
            }
        </div>
        <div class="clearfix"></div>
    </div>
</div>
<style>
    .mail-tools h5 {
        display: flex;
        justify-content: space-between;
        width: 100%;
    }
</style>