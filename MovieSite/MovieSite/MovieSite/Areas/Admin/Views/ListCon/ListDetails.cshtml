@model MovieSite.Areas.Admin.Models.ListViewModel
@{
    ViewData["Title"] = "ListDetails";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div style="padding:50px;color:black;font-size:20px">
    @using (Html.BeginForm("ListDetails", "ListCon", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.HiddenFor(x => x.listID)

        <div style="margin-bottom: 50px;">
            <label style="display: inline-block; width: 200px;">Film Adı:</label>
            @Html.TextBoxFor(x =>x.listC.ListName, new { @type = "text", style = "width:50%;height:50px; border-radius: 10px; background-color: #C0C0C0; color: black; padding: 5px; border:none;" })
        </div>

        <div style="display: flex; gap: 10px;">
            <button type="submit" class="btn btn-success">Kaydet</button>
        </div>
    }
    @using (Html.BeginForm("DeleteList", "ListCon", FormMethod.Post))
    {
        @Html.Hidden("listID", Model.listID)
        <div style="margin-top:10px">
            <button type="submit" class="btn btn-danger">Sil</button>
        </div>
    }

    <div style="display: flex; gap: 30px; margin-top: 20px;">
        <div>
            <button type="submit" class="btn btn-info"><a href="~/Admin/ListCon/ListMovie?id=@Model.listID">Bu listede olan filmler </a></button>
        </div>
        <div>
            <button type="submit" class="btn btn-secondary"><a href="~/Admin/ListCon/ListDontMovie?id=@Model.listID" style="color: white; text-decoration: none;">Bu listede olmayan filmler </a></button>
        </div>

    </div>
</div>

