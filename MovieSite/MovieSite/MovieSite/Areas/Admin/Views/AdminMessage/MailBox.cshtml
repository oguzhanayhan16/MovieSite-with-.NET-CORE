@model MovieSite.Areas.Admin.Models.AdminMessageViewModel
@{
    ViewData["Title"] = "MailBox";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}






<div class="col-lg-12 animated fadeInRight">
    <div class="mail-box-header">

        <h2>
            Mesajı görüntüle
        </h2>
        <div class="mail-tools tooltip-demo m-t-md">


            <h3>
                <span class="font-normal">Konu: </span>@Model.message.MessageContent.
            </h3>
            <h5>
                <span class="float-right font-normal">@Model.message.MessageDate.ToString("dd.MM.yyyy")</span>
                <span class="font-normal">From: </span>@Model.user.Email
            </h5>
        </div>
    </div>
    <div class="mail-box">


        <div class="mail-body">
            <p>
                @Model.message.MessageContent
            </p>

        </div>

        <div class="mail-body text-right tooltip-demo">
            <a 
               
            </a>
            <a class="btn btn-sm btn-white" href="@Url.Action("SendMessageAdmin", "AdminMessage", new { messageID = @Model.message.MessageID, userID = @Model.user.UserID })">><i class="fa fa-arrow-right"></i> Forward</a>
            @using (Html.BeginForm("MailDelete", "AdminMessage", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.Hidden("messageID", Model.message.MessageID)
                <button title="" data-placement="top" data-toggle="tooltip" data-original-title="Trash" class="btn btn-sm btn-white"><i class="fa fa-trash-o"></i> Remove</button>
            }
        </div>
        <div class="clearfix"></div>


    </div>
</div>

